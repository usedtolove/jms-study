<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <context-param>
        <!-- 每天固定时间 -->
        <param-name>cron</param-name>
        <!--<param-value>0 12 13 ? * *</param-value>-->
        <!-- 每隔 1 min -->
        <param-value>0 */1 * * * ?</param-value>
    </context-param>

    <listener>
        <listener-class>com.test.servlet.MyAppListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>UserRegisterServlet</servlet-name>
        <servlet-class>com.test.servlet.UserRegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserRegisterServlet</servlet-name>
        <url-pattern>/user/register</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

</web-app>
